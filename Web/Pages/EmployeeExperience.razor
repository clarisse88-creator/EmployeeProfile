@page "/EmployeeExperience"
@using Web.Model

@layout MainLayout
@inject HttpClient http

<div class="container-fluid mt-5">

    <link href="css/form.css" rel="stylesheet" />

    <h3>EmployeeExperience</h3>


    <a href="/add-EmployeeExperience">Add EmployeeExperience</a>

    <div class="card">
    <table >
        <thead>
        <th>EmployeeId</th>
        <th>CompanyName</th>
        <th>Position</th>
        <th>StartDate</th>
        <th>EndDate</th>
        <th>Description</th>



        </thead>
        <tbody>
            @foreach (var item in listEmployeeExperience)
            {
                <tr>
                    <td>@item.EmployeeId</td>
                    <td>@item.CompanyName</td>
                    <td>@item.Position</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>

@code {
    List<EmployeeExperienceGetDto> listEmployeeExperience = new List<EmployeeExperienceGetDto>();

    protected override async Task OnInitializedAsync()
    {
        listEmployeeExperience = await http.GetFromJsonAsync<List<EmployeeExperienceGetDto>>("/GetEmployeeExperience");
    }

}





